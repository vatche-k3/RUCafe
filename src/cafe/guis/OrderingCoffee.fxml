<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cafe.controllers.OrderingCoffeeController">
   <children>
      <Group layoutX="140.0" layoutY="48.0">
         <children>
            <VBox maxWidth="500.0">
               <children>
                  <Label text="Add-Ons">
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </Label>
                  <HBox>
                     <children>
                        <CheckBox fx:id="creamCheckbox" mnemonicParsing="false" onAction="#addinCheckedHandler" prefHeight="28.0" prefWidth="119.0" text="Cream">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <Spinner fx:id="creamQuantity" prefHeight="28.0" prefWidth="86.0" translateX="14.0">
                          <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="5"/>
                          </valueFactory>
                        </Spinner>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <CheckBox fx:id="milkCheckbox" mnemonicParsing="false" onAction="#addinCheckedHandler" prefHeight="28.0" prefWidth="119.0" text="Milk">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <Spinner fx:id="milkQuantity" prefHeight="28.0" prefWidth="86.0" translateX="14.0">
                          <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="5"/>
                          </valueFactory>
                        </Spinner>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <CheckBox fx:id="whippedCreamCheckbox" mnemonicParsing="false" onAction="#addinCheckedHandler" text="Whipped Cream">
                           <padding>
                              <Insets bottom="10.0" right="10.0" />
                           </padding>
                        </CheckBox>
                        <Spinner fx:id="whippedCreamQuantity" prefHeight="28.0" prefWidth="86.0">
                           <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="5"/>
                           </valueFactory>
                        </Spinner>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <CheckBox fx:id="syrupCheckbox" mnemonicParsing="false" onAction="#addinCheckedHandler" prefHeight="28.0" prefWidth="119.0" text="Syrup">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <Spinner fx:id="syrupQuantity" prefHeight="28.0" prefWidth="86.0" translateX="14.0">
                           <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="5"/>
                           </valueFactory>
                        </Spinner>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <CheckBox fx:id="caramelCheckbox" mnemonicParsing="false" onAction="#addinCheckedHandler" prefHeight="28.0" prefWidth="119.0" text="Caramel">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <Spinner fx:id="caramelQuantity" prefHeight="28.0" prefWidth="86.0" translateX="14.0">
                           <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="5"/>
                           </valueFactory>
                        </Spinner>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children></Group>
      <Group layoutX="140.0" layoutY="248.0">
         <children>
            <VBox>
               <children>
                  <Label text="Current Price" />
                  <TextField fx:id="currentPrice" disable="true" />
                  <Label text="Sizes" />
                  <ComboBox fx:id="coffeeSizesComboBox" onAction="#onSizeSelection" prefWidth="175.0" />
               </children>
            </VBox>
         </children>
      </Group>
      <Button fx:id="addToOrderButton" layoutX="396.0" layoutY="293.0" mnemonicParsing="false" onAction="#addCoffeeToOrder" text="Add to Order" />
   </children>
</AnchorPane>